<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProducts"
    android:orientation="vertical"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/pictureDetail"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"
        android:src="@drawable/ic_baseline_add_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-15dp"
        android:background="@drawable/detail">

        <TextView
            android:id="@+id/hargaDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat"
            android:hint="Harga"
            android:paddingLeft="20dp"
            android:textAppearance="@style/e_mail"
            android:textSize="22dp" />

        <TextView
            android:textAppearance="@style/e_mail"
            android:id="@+id/namaDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Produk"
            android:paddingLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@drawable/detail2">

        <TextView
            android:id="@+id/detprod"
            android:textAppearance="@style/e_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detail Produk"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:paddingTop="3dp"
            android:layout_below="@id/detprod"
            android:id="@+id/ketDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat"
            android:hint="Keterangan"
            android:paddingLeft="20dp"
            android:textAppearance="@style/e_mail" />

        <TextView
            android:background="@drawable/detail3"
            android:id="@+id/btnBuy"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Buy Now!"
            android:textColor="@color/white"
            android:textAppearance="@style/e_mail"/>
    </RelativeLayout>

</LinearLayout>